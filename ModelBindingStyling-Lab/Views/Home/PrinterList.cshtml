@{
    ViewData["Title"] = "3D Printers";
}

<div class="container py-4">
    <h1 class="mb-4 text-center">3D Printer List</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col">
            <div class="card h-100 shadow">
                <img src="https://via.placeholder.com/300x200"
                     class="card-img-top img-fluid"
                     alt="Printer">
                <div class="card-body">
                    <h5 class="card-title">Prusa MK3</h5>
                    <p class="card-text">Reliable and accurate 3D printer.</p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow">
                <img src="https://via.placeholder.com/300x200"
                     class="card-img-top img-fluid"
                     alt="Printer">
                <div class="card-body">
                    <h5 class="card-title">Creality Ender 3</h5>
                    <p class="card-text">Affordable printer for beginners.</p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow">
                <img src="https://via.placeholder.com/300x200"
                     class="card-img-top img-fluid"
                     alt="Printer">
                <div class="card-body">
                    <h5 class="card-title">Bambu Lab X1</h5>
                    <p class="card-text">High-speed professional printer.</p>
                </div>
            </div>
        </div>
    </div>
</div>